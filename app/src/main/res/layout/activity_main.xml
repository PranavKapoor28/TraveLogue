<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<ScrollView

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#53FBFAFA"

        android:orientation="vertical">


        <TextView
            android:id="@+id/t"
            android:layout_width="208dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:layout_marginTop="42sp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Restaurants"
            android:textColor="#041C93"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/button11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="423dp"
            android:layout_height="233dp"
            android:layout_gravity="center"
            android:layout_marginBottom="22dp"
            app:srcCompat="@drawable/dishback" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#040303"></View>

        <androidx.cardview.widget.CardView
            android:id="@+id/list1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginTop="10dp"
            android:background="#E4E0E0"
            android:elevation="22sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:padding="5dp"
                app:srcCompat="@drawable/burger" />

            <TextView
                android:id="@+id/t1"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:paddingLeft="15dp"
                android:text="BASKIN ROBINS"
                android:textColor="#050505"

                android:textSize="24sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#090909"
            android:elevation="22sp"></View>

        <androidx.cardview.widget.CardView
            android:id="@+id/list2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#E8E2E2"
            android:elevation="22sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:padding="5dp"
                app:srcCompat="@drawable/dominoz" />

            <TextView
                android:id="@+id/t2"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:paddingLeft="15dp"
                android:text="DOMINOS"
                android:textColor="#040403"
                android:textSize="24sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#0B0A0A"></View>

        <androidx.cardview.widget.CardView
            android:id="@+id/list3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#E1DCDC"
            android:elevation="22sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:padding="5dp"
                app:srcCompat="@drawable/parkroyal" />

            <TextView
                android:id="@+id/t3"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:paddingLeft="15dp"
                android:text="PIZZA HUT"
                android:textColor="#050505"
                android:textSize="24sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#050505"
            android:elevation="22sp"></View>

        <androidx.cardview.widget.CardView
            android:id="@+id/list4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#EAE4E4"
            android:elevation="22sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/PotatoeImage"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:padding="5dp"
                app:srcCompat="@drawable/burger" />

            <TextView
                android:id="@+id/t4"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:paddingLeft="15dp"
                android:text="BURGER KING"
                android:textColor="#050505"
                android:textSize="24sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#070707"></View>

        <androidx.cardview.widget.CardView
            android:id="@+id/list5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginBottom="10sp"
            android:background="#E8E2E2"
            android:elevation="22sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image4"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:padding="5dp"
                app:srcCompat="@drawable/kfc" />

            <TextView
                android:id="@+id/t5"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:paddingLeft="15dp"
                android:text="KFC"
                android:textColor="#090909"
                android:textColorHint="#0E0E0E"
                android:textSize="24sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#050505"></View>

        <androidx.cardview.widget.CardView
            android:id="@+id/list6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginTop="50dp"
            android:background="#E3DDDD"
            android:elevation="62dp"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image5"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:background="#EAE4E4"
                android:padding="5dp"
                app:srcCompat="@drawable/parkroyal" />

            <TextView
                android:id="@+id/t6"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:paddingLeft="15dp"
                android:text="AMUL"
                android:textColor="#090909"
                android:textSize="24sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>